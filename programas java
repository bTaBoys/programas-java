/******************************************************************************

JAVA

*******************************************************************************/
public class Main
{
	public static void main(String[] args) {
		mensagem();
		mensagem("que legal");
		mensagem("cada enxadada uma minhoca");
	}
	public static void mensagem() {
	    System.out.println("olá mundo");
	}
	public static void mensagem(String m) {
	    System.out.println(m);
	}
}

