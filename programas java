/******************************************************************************

Pedro Cabrera - Calculadora em C

*******************************************************************************/
#include <stdio.h>

int main()
{
    int a= 22, b=223, soma, prod, divisao, subtracao, resto ;
    
    // Processamento
    
    soma = a + b;
    prod = a * b;
    divisao = a / b;
    subtracao = a - b;
    resto = b % a;
    
    //saída
    
    printf("Soma = %d", soma);
    printf("\nprod = %d", prod);
    printf("\ndivisao = %d", divisao);
    printf("\nsubtracao = %d", subtracao);
    printf("\nresto = %d", resto);
    
    // printf ("\nsoma=%d prod=%d", prod, soma);
    
    return 0;
}

—------------------------------------------------------------------------------------------------------------------------

/******************************************************************************

Pedro Cabrera - Calculadora em C p2

*******************************************************************************/
#include <stdio.h>

int soma (int a, int b)
{
    return a + b;
}

int subtracao (int a, int b)
{
    return a - b
}

int prod (int a, int b)
{
    return a * b
}

int divisao (int a, int b)
{
    return a / b
}

int main()
{
    int a= 22, b=223;
    
    // Processamento
    
    //saída
    
    printf("Soma = %d", soma(a,b));
    printf("\nprod = %d", prod(a,b));
    printf("\ndivisao = %d", divisao(a,b));
    printf("\nsubtracao = %d", subtracao(a,b));
    printf("\nresto = %d", resto(a,b));
    
    return 0;
}

